<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alderhernandez.a4buy">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".PedidoActivity"
            android:label="@string/title_activity_pedido" />
        <activity
            android:name=".PedidoActivity2"
            android:label="@string/title_activity_pedido2" />
        <activity
            android:name=".ArticulosActivity"
            android:label="@string/title_activity_pedido" />
        <activity
            android:name=".ResumenActivity"
            android:label="@string/ResumenActivity" />
        <activity
            android:name=".BandejaPedidosActivity"
            android:label="@string/BandejaPedido" />
        <activity
            android:name=".CobroInActivity"
            android:label="@string/BandejaCobro" />
    </application>

</manifest>